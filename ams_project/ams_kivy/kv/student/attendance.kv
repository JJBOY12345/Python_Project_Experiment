<StudentAttendanceScreen>:
    attendance_list: attendance_list
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        
        MDTopAppBar:
            title: "My Attendance"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: root.go_back()]]
        
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)
            
            MDScrollView:
                MDList:
                    id: attendance_list
                    padding: dp(10)