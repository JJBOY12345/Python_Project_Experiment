# Create kv/student/eligibility.kv
<EligibilityScreen>:
    eligibility_list: eligibility_list
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        
        MDTopAppBar:
            title: "Attendance Eligibility"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: root.go_back()]]
        
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)
            
            MDLabel:
                text: "Exam Eligibility Status"
                font_style: 'H6'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: dp(10)
            
            MDScrollView:
                MDList:
                    id: eligibility_list
                    padding: dp(10)