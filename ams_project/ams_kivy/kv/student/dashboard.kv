<StudentDashboard>:
    name_label: name_label
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        
        MDTopAppBar:
            title: "Student Dashboard"
            elevation: 4
            right_action_items: [["logout", lambda x: root.logout()]]
        
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)
            
            MDLabel:
                id: name_label
                text: "Welcome, Student"
                font_style: 'H5'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
            
            MDGridLayout:
                cols: 2
                spacing: dp(20)
                padding: dp(20)
                
                MDCard:
                    orientation: 'vertical'
                    padding: dp(16)
                    size_hint: 1, None
                    height: "120dp"
                    on_release: root.view_attendance()
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        
                        MDIcon:
                            icon: "calendar-check"
                            halign: 'center'
                            font_size: dp(36)
                        
                        MDLabel:
                            text: "View Attendance"
                            halign: 'center'
                
                MDCard:
                    orientation: 'vertical'
                    padding: dp(16)
                    size_hint: 1, None
                    height: "120dp"
                    on_release: root.submit_correction()
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        
                        MDIcon:
                            icon: "file-document-edit"
                            halign: 'center'
                            font_size: dp(36)
                        
                        MDLabel:
                            text: "Submit Correction"
                            halign: 'center'
                
                MDCard:
                    orientation: 'vertical'
                    padding: dp(16)
                    size_hint: 1, None
                    height: "120dp"
                    on_release: root.excuse_absence()
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        
                        MDIcon:
                            icon: "account-cancel"
                            halign: 'center'
                            font_size: dp(36)
                        
                        MDLabel:
                            text: "Excuse Absence"
                            halign: 'center'
                
                MDCard:
                    orientation: 'vertical'
                    padding: dp(16)
                    size_hint: 1, None
                    height: "120dp"
                    on_release: root.check_eligibility()
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        
                        MDIcon:
                            icon: "check-circle"
                            halign: 'center'
                            font_size: dp(36)
                        
                        MDLabel:
                            text: "Check Eligibility"
                            halign: 'center'
                
                MDCard:
                    orientation: 'vertical'
                    padding: dp(16)
                    size_hint: 1, None
                    height: "120dp"
                    on_release: root.view_notifications()
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        
                        MDIcon:
                            icon: "bell"
                            halign: 'center'
                            font_size: dp(36)
                        
                        MDLabel:
                            text: "Notifications"
                            halign: 'center'