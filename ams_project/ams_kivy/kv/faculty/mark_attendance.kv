# Create kv/faculty/mark_attendance.kv
<MarkAttendanceScreen>:
    course_dropdown: course_dropdown
    date_picker_button: date_picker_button
    students_list: students_list
    submit_button: submit_button
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        
        MDTopAppBar:
            title: "Mark Attendance"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: root.go_back()]]
        
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)
            
            MDGridLayout:
                cols: 2
                spacing: dp(10)
                size_hint_y: None
                height: self.minimum_height
                
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)
                    adaptive_height: True
                    
                    MDLabel:
                        text: "Course"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    MDFlatButton:
                        id: course_dropdown
                        text: "Select Course"
                        size_hint_x: 1
                        on_release: root.open_course_menu()
                
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)
                    adaptive_height: True
                    
                    MDLabel:
                        text: "Date"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                    
                    MDFlatButton:
                        id: date_picker_button
                        text: "Select Date"
                        size_hint_x: 1
                        on_release: root.show_date_picker()
            
            MDSeparator:
                height: dp(1)
            
            MDLabel:
                text: "Students"
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: dp(10)
            
            MDScrollView:
                MDList:
                    id: students_list
                    padding: dp(10)
            
            MDRaisedButton:
                id: submit_button
                text: "Submit Attendance"
                on_release: root.submit_attendance()
                size_hint_x: 1
                height: "48dp"