<AdminDashboard>:
    name_label: name_label
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        
        MDTopAppBar:
            title: "Admin Dashboard"
            elevation: 4
            right_action_items: [["logout", lambda x: root.logout()]]
        
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)
            
            MDLabel:
                id: name_label
                text: "Welcome, Admin"
                font_style: 'H5'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
            
            MDGridLayout:
                cols: 2
                spacing: dp(20)
                padding: dp(20)
                
                MDCard:
                    orientation: 'vertical'
                    padding: dp(16)
                    size_hint: 1, None
                    height: "120dp"
                    on_release: root.manage_users()
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        
                        MDIcon:
                            icon: "account-group"
                            halign: 'center'
                            font_size: dp(36)
                        
                        MDLabel:
                            text: "Manage Users"
                            halign: 'center'
                
                MDCard:
                    orientation: 'vertical'
                    padding: dp(16)
                    size_hint: 1, None
                    height: "120dp"
                    on_release: root.generate_analytics()
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        
                        MDIcon:
                            icon: "chart-bar"
                            halign: 'center'
                            font_size: dp(36)
                        
                        MDLabel:
                            text: "Generate Analytics"
                            halign: 'center'
                
                MDCard:
                    orientation: 'vertical'
                    padding: dp(16)
                    size_hint: 1, None
                    height: "120dp"
                    on_release: root.track_attendance()
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        
                        MDIcon:
                            icon: "account-alert"
                            halign: 'center'
                            font_size: dp(36)
                        
                        MDLabel:
                            text: "Track Low Attendance"
                            halign: 'center'