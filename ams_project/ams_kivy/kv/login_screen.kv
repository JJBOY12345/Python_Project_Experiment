<LoginScreen>:
    username_input: username_input
    password_input: password_input
    login_button: login_button
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        
        MDLabel:
            text: "Attendance Management System"
            halign: 'center'
            font_style: 'H4'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: dp(20)
        
        MDCard:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)
            size_hint: None, None
            size: "300dp", "320dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            
            MDLabel:
                text: "Login"
                font_style: 'H5'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
            
            MDTextField:
                id: username_input
                hint_text: "Username"
                required: True
                helper_text: "Enter your username"
                helper_text_mode: "on_focus"
            
            MDTextField:
                id: password_input
                hint_text: "Password"
                password: True
                required: True
                helper_text: "Enter your password"
                helper_text_mode: "on_focus"
            
            MDRaisedButton:
                id: login_button
                text: "Login"
                on_release: root.on_login_button_press()
                size_hint_x: 1
                height: "48dp"